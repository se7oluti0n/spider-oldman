<%= form_for @user, url: signup_path do |f| %>
  <div class='form-group row'>
    <%= f.label :name, class: 'col-xs-2 col-form-label' %>
    <div class="col-xs-10">
      <%= f.text_field :name, class: 'form-control' %> 
    </div>
  </div>
  <div class='form-group row'>
    <%= f.label :email, class: 'col-xs-2 col-form-label' %>
    <div class="col-xs-10">
      <%= f.text_field :email, class: 'form-control' %> 
    </div>
  </div>
  <div class='form-group row'>
    <%= f.label :password, class: 'col-xs-2 col-form-label' %>
    <div class="col-xs-10">
      <%= f.password_field :password, class: 'form-control' %> 
    </div>
  </div>
  <div class='form-group row'>
    <%= f.label :password_confirmation, class: 'col-xs-2 col-form-label' %>
    <div class="col-xs-10">
      <%= f.password_field :password_confirmation, class: 'form-control' %> 
    </div>
  </div>

<div class='form-group row'>
  <%= f.submit class: 'col-xs-10 btn btn-primary' %>
</div>

<% end %>
